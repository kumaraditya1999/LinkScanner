{
    "name" : "LinkScanner",
    "version" : "1.0",
    "description" : "Shows QR Code for the current browser tab!",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions":["storage","tabs"],
    "manifest_version" : 2
    
}